<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".agregar_entienda">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="185dp"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="669dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imgFoto"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_marginStart="195dp"
            android:layout_marginTop="20dp"
            android:contentDescription="@string/todo" />

    </LinearLayout>

    <EditText
        android:id="@+id/txtCodigoTie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="160dp"
        android:layout_marginBottom="654dp"
        android:hint="@string/cod_producto"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtProductoTie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="220dp"
        android:layout_marginBottom="594dp"
        android:hint="@string/nombre"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textSize="14sp" />

    <EditText
        android:id="@+id/txtPrecioTie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="290dp"
        android:layout_marginBottom="524dp"
        android:hint="@string/precio"
        android:importantForAutofill="no"
        android:inputType="text"
        android:textSize="14sp" />

    <Button
        android:id="@+id/btnGuardarTie"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="360dp"
        android:layout_marginBottom="446dp"
        android:text="@string/guardar"
        android:textSize="14sp" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/btnMostrarTie"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="404dp"
        android:layout_marginTop="783dp"
        android:layout_marginEnd="20dp"
        android:layout_marginBottom="15dp"
        android:src="@android:drawable/ic_menu_revert"
        app:backgroundTint="#000000" />
</RelativeLayout>